<Window x:Class="UIHeavyClient.PasswordPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Password" Height="130" Width="345" MinWidth="345" MaxWidth="345" MinHeight="130" MaxHeight="130" ResizeMode="NoResize" Background="Black" Foreground="White">
    <Grid>
        <Label Content="Enter the game password : " Height="32" HorizontalAlignment="Left" Margin="7,12,0,0" Name="mPasswordLabel" VerticalAlignment="Top" Width="152" Foreground="White" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="161,15,0,0" Name="mPasswordBox" VerticalAlignment="Top" Width="151" Background="Black" Foreground="White" />
        <Button Content="Ok" Height="23" HorizontalAlignment="Left" Margin="7,58,0,0" Name="mOkButton" VerticalAlignment="Top" Width="82" Background="Black" Foreground="White" Click="mOkButton_Click" IsDefault="True" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="104,58,0,0" Name="mCancelButton" VerticalAlignment="Top" Width="81" Background="Black" Foreground="White" Click="mCancelButton_Click" />
    </Grid>
</Window>
