<Window x:Class="UIHeavyClient.ServerMapPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ServerMapPrompt" Height="130" Width="265" Background="Black" Foreground="White">
    <Grid Background="Black">
        <Label Content="Choose a map : " Height="28" HorizontalAlignment="Left" Name="mMapLabel" VerticalAlignment="Top" Margin="12,12,0,0" Background="Black" Foreground="White" />
        <Button Content="Ok" Height="23" HorizontalAlignment="Left" Margin="12,46,0,0" Name="mOkButton" VerticalAlignment="Top" Width="75" Background="Black" Foreground="White" Click="mOkButton_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="103,46,0,0" Name="mCancelButton" VerticalAlignment="Top" Width="75" Background="Black" Foreground="White" Click="mCancelButton_Click" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="103,12,0,0" Name="mMapComboBox" VerticalAlignment="Top" Width="120" />
    </Grid>
</Window>
