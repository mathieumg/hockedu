<Window x:Class="UIHeavyClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:local="clr-namespace:UIHeavyClient;assembly=UIHeavyClient"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="600"
        Closed="Window_Closed" MinWidth="400" MinHeight="300" Background="#FF555555" Foreground="#FFD4D2D2" BorderBrush="#FF666B89" OpacityMask="#FF646464" WindowStyle="ThreeDBorderWindow">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
        <MenuItem Header="File">
            <!--<MenuItem Header="New" Click="NewDocument"/>
            <MenuItem Header="Exit" Click="ExitApplication"/>-->
        </MenuItem>
        <MenuItem Header="Edit"/>
        <MenuItem Header="Window">
            <!--<MenuItem Header="Explorer" Click="ShowExplorerWindow"/>
            <MenuItem Header="Output" Click="ShowOutputWindow"/>
            <MenuItem Header="Property" Click="ShowPropertyWindow"/>
            <MenuItem Header="ToDoList" Click="ShowListWindow"/>-->
        </MenuItem>
        <MenuItem Header="?"/>
    </Menu>
    <Grid Height="Auto" Width="Auto" IsManipulationEnabled="true">
        <Grid.RowDefinitions>
            <RowDefinition Height="42" MaxHeight="50"/>
            <RowDefinition Height="103*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" MaxWidth="100"/>
            <ColumnDefinition Width="309*"/>
        </Grid.ColumnDefinitions>
        <WindowsFormsHost Name="windowsFormsHost1" Grid.Row ="2" Grid.Column ="2">
            <!--Ceci compile meme si intellisense dit le contraire, 
            simplement commenter la ligne pour travailler avec le designer-->
            <!--<local:OpenGLControl Name="mOpenGlControl" Margin="0,0,0,0"/>-->
        </WindowsFormsHost>
        <Button Content="Hide" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="60" Click="Button_Click_1"/>
        <Button Name="mEditionModeButton" Content="Mode Edition" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="GoToEditionMode" />
        <Button Name="mGameModeButton" Content="Mode Jeu" Grid.Column="1" HorizontalAlignment="Left" Margin="92,10,0,0" VerticalAlignment="Top" Width="75" Click="GoToGameMode"/>
            <ComboBox Name="mCameraCombo" HorizontalAlignment="Left" Margin="10,23,0,0" Grid.Row="1" VerticalAlignment="Top" Width="80" SelectionChanged="OnSelectionChanged">
                <ComboBoxItem Content="Fixe" Selected="SetCameraFixe"/>
                <ComboBoxItem Content="Orbite" Selected="SetCameraOrbite"/>
                <ComboBoxItem Content="Libre" Selected="SetCameraLibre"/>
            </ComboBox>
            <ComboBox Name="mCameraToolCombo" HorizontalAlignment="Left" Margin="10,81,0,0" Grid.Row="1" VerticalAlignment="Top" Width="80" SelectionChanged="OnSelectionChanged">
                <ComboBoxItem Content="Deplacer" Selected="CameraToolMove"/>
                <ComboBoxItem Content="Rotation" Selected="CameraToolRotation"/>
                <ComboBoxItem Content="Zoom" Selected="CameraToolZoom"/>
            </ComboBox>
            <Label Content="Camera" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="#FFF3ECEC"/>
            <Label  Content="Camera Tool" HorizontalAlignment="Left" Margin="10,50,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="#FFF3ECEC"/>
            <Label  Content="Edition Objets" HorizontalAlignment="Left" Margin="10,117,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="#FFF3ECEC"/>
            <ComboBox Name="mEditObjectCombo" HorizontalAlignment="Left" Margin="10,148,0,0" Grid.Row="1" VerticalAlignment="Top" Width="80" SelectionChanged="OnSelectionChanged">
                <ComboBoxItem Content="Selection" Selected="EditToolSelection"/>
                <ComboBoxItem Content="Deplacement" Selected="EditToolMove"/>
                <ComboBoxItem Content="Rotation" Selected="EditToolRotation"/>
                <ComboBoxItem Content="Echelle" Selected="EditToolScale"/>
                <ComboBoxItem Content="Dupliquer" Selected="EditToolDuplicate"/>
                <ComboBoxItem Content="Supprimer" Selected="EditToolDelete"/>
            </ComboBox>
            <Label Content="Ajout Objets" HorizontalAlignment="Left" Margin="10,188,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="#FFF3ECEC"/>
            <ComboBox Name="mAddObjectCombo" HorizontalAlignment="Left" Margin="10,219,0,0" Grid.Row="1" VerticalAlignment="Top" Width="80" SelectionChanged="OnSelectionChanged">
                <ComboBoxItem Content="Mur" Selected="AddObjectWall"/>
                <ComboBoxItem Content="Portail" Selected="AddObjectPortal"/>
                <ComboBoxItem Content="Boost" Selected="AddObjectBoost"/>
                <ComboBoxItem Content="Rondelle" Selected="AddObjectPuck"/>
                <ComboBoxItem Content="Maillet" Selected="AddObjectMallet"/>
            </ComboBox>
            <Button Name="mDefaultFieldButton" Content="Terrain Defaut" Grid.Column="1" HorizontalAlignment="Left" Margin="172,10,0,0" VerticalAlignment="Top" Width="99" Click="OnGenerateField"/>
        </Grid>
    </DockPanel>
</Window>
