<UserControl x:Class="UIHeavyClient.EditionModeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="456" d:DesignWidth="946">
    <Grid Background="#FF323232">
        <Grid.RowDefinitions>
            <RowDefinition Height="42" MaxHeight="50"/>
            <RowDefinition Height="103*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" MaxWidth="100"/>
            <ColumnDefinition Width="309*"/>
        </Grid.ColumnDefinitions>
        <Button Name="mEditionModeButton" Content="Mode Edition" HorizontalAlignment="Left" Margin="23,12,0,0" VerticalAlignment="Top" Click="GoToEditionMode" Grid.Row="0" Grid.Column="1"/>
        <Button Name="mGameModeButton" Content="Mode Jeu" HorizontalAlignment="Left" Margin="125,12,0,0" VerticalAlignment="Top" Width="75" Click="GoToGameMode" Grid.Column="1"/>
        <ComboBox Name="mCameraCombo" HorizontalAlignment="Left" Margin="7,43,0,0" VerticalAlignment="Top" Width="80" SelectionChanged="OnSelectionChanged"  Grid.Row="1">
            <ComboBoxItem Content="Fixe" Selected="SetCameraFixe"/>
            <ComboBoxItem Content="Orbite" Selected="SetCameraOrbite"/>
            <ComboBoxItem Content="Libre" Selected="SetCameraLibre"/>
        </ComboBox>
        <ComboBox Name="mCameraToolCombo" HorizontalAlignment="Left" Margin="12,103,0,0" VerticalAlignment="Top" Width="80" SelectionChanged="OnSelectionChanged" Grid.Row="1">
            <ComboBoxItem Content="Deplacer" Selected="CameraToolMove"/>
            <ComboBoxItem Content="Rotation" Selected="CameraToolRotation"/>
            <ComboBoxItem Content="Zoom" Selected="CameraToolZoom"/>
        </ComboBox>
        <Label Content="Camera" HorizontalAlignment="Left" Margin="7,11,0,0" VerticalAlignment="Top" Foreground="#FFF3ECEC" Grid.Row="1" />
        <Label  Content="Camera Tool" HorizontalAlignment="Left" Margin="7,71,0,0" VerticalAlignment="Top" Foreground="#FFF3ECEC" Grid.Row="1" />
        <Label  Content="Edition Objets" HorizontalAlignment="Left" Margin="7,142,0,0" VerticalAlignment="Top" Foreground="#FFF3ECEC" Grid.Row="1" />
        <ComboBox Name="mEditObjectCombo" HorizontalAlignment="Left" Margin="7,174,0,0" VerticalAlignment="Top" Width="80" SelectionChanged="OnSelectionChanged" Grid.Row="1">
            <ComboBoxItem Content="Selection" Selected="EditToolSelection"/>
            <ComboBoxItem Content="Deplacement" Selected="EditToolMove"/>
            <ComboBoxItem Content="Rotation" Selected="EditToolRotation"/>
            <ComboBoxItem Content="Echelle" Selected="EditToolScale"/>
            <ComboBoxItem Content="Dupliquer" Selected="EditToolDuplicate"/>
            <ComboBoxItem Content="Supprimer" Selected="EditToolDelete"/>
        </ComboBox>
        <Label Content="Ajout Objets" HorizontalAlignment="Left" Margin="7,217,0,0" VerticalAlignment="Top" Foreground="#FFF3ECEC" Grid.Row="1" />
        <ComboBox Name="mAddObjectCombo" HorizontalAlignment="Left" Margin="7,258,0,0" VerticalAlignment="Top" Width="80" SelectionChanged="OnSelectionChanged" Grid.Row="1">
            <ComboBoxItem Content="Mur" Selected="AddObjectWall"/>
            <ComboBoxItem Content="Portail" Selected="AddObjectPortal"/>
            <ComboBoxItem Content="Boost" Selected="AddObjectBoost"/>
            <ComboBoxItem Content="Rondelle" Selected="AddObjectPuck"/>
            <ComboBoxItem Content="Maillet" Selected="AddObjectMallet"/>
        </ComboBox>
        <Button Content="Main Menu" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="85" Click="Button_Click_1" Height="22" Grid.Row="0" Grid.Column="0"/>
        <Button Name="mDefaultFieldButton" Content="Terrain Defaut" HorizontalAlignment="Left" Margin="223,12,0,0" VerticalAlignment="Top" Width="99" Click="OnGenerateField" Grid.Column="1"/>

        <WindowsFormsHost Name="windowsFormsHost1" Grid.Row ="1" Grid.Column ="1">
            <!--Ceci compile meme si intellisense dit le contraire, 
            simplement commenter la ligne pour travailler avec le designer-->
            <!--<local:OpenGLControl Name="mOpenGlControl" Margin="0,0,0,0"/>-->
        </WindowsFormsHost>
    </Grid>

</UserControl>
