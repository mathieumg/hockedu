<UserControl x:Class="UIHeavyClient.BonusEditionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" >
    <StackPanel Background="Black" >
        <Label Content="Bonus" Foreground="White"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Min Spawn Time:" Foreground="White"/>
            <TextBox HorizontalAlignment="Left" x:Name="mMinTextBox" VerticalAlignment="Top" Width="32"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Max Spawn Time:" Foreground="White"/>
            <TextBox HorizontalAlignment="Left" x:Name="mMaxTextBox" VerticalAlignment="Top" Width="32"/>
        </StackPanel>
        <StackPanel>
            <Label Foreground="White">Type</Label>
            <DataGrid Name="mDataGrid"/>
        </StackPanel>
    </StackPanel>
</UserControl>
