<Window x:Class="UIHeavyClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Razor Chat" Height="583" Width="979" Closed="Window_Closed" Background="#FF323232">
    <Grid Height="509" Width="878" IsManipulationEnabled="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="388*" />
            <RowDefinition Height="64*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="516*" />
            <ColumnDefinition Width="186*" />
        </Grid.ColumnDefinitions>
        <TextBox Height="33" HorizontalAlignment="Left" Margin="12,7,0,0" Name="messageTextBox" VerticalAlignment="Top" Width="495" KeyDown="messageTextBox_KeyDown" Background="Black" Foreground="White" Grid.Row="1" />
        <Button Content="Envoyer" Height="35" HorizontalAlignment="Left" Margin="10,6,0,0" Name="submitButton" VerticalAlignment="Top" Width="131" Click="submitButton_Click" Background="Black" Foreground="White" Grid.Column="1" Grid.Row="1" />
        <TextBox Height="369" HorizontalAlignment="Left" Margin="12,12,0,0" Name="wholeMessageBox" VerticalAlignment="Top" Width="495" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Text="Vous êtes en ligne!" Background="Black" Foreground="White" />
        <ListView Height="343" HorizontalAlignment="Left" Margin="10,38,0,0" Name="onlineListView" VerticalAlignment="Top" Width="146" Background="Black" Foreground="White" Grid.Column="1" />
        <Label Content="En ligne : " Height="37" HorizontalAlignment="Left" Margin="10,0,0,0" Name="label1" VerticalAlignment="Top" Width="145" Foreground="White" Grid.Column="1" />
    </Grid>
</Window>
